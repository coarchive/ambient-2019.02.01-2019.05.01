{
  /* Visual Stuido Code Settings */
    // Terminal
      "terminal.integrated.shell.windows": "/Windows/System32/wsl.exe",
      "terminal.integrated.fontFamily": "Hack, Ubuntu Mono, Consolas",
      "terminal.external.windowsExec": "/Windows/System32/wsl.exe",

    // Editor
      // Functionality
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.selectionHighlight": false, // too distracting
        "editor.multiCursorModifier": "ctrlCmd",
        "editor.emptySelectionClipboard": false,

      // Autocomplete
        "editor.acceptSuggestionOnEnter": "off",

      // Appearance
        "editor.fontFamily": "Hack, Consolas, monospace",
        "editor.renderWhitespace": "boundary",
        "editor.accessibilitySupport": "off",
        "editor.dragAndDrop": false,
        "editor.parameterHints.enabled": false,
        "editor.minimap.renderCharacters": false,
        "editor.acceptSuggestionOnCommitCharacter": false,

    // Files
      "files.eol": "\n",
      "files.insertFinalNewline": true,
      "files.autoSave": "off",
      "files.associations": {
        "*.bash_profile": "shellscript",
        "*.bashrc": "shellscript",
      },

    // File Tree
      "explorer.confirmDragAndDrop": false,

    // Workbench
      "workbench.startupEditor": "none",
      "workbench.list.keyboardNavigation": "simple",
      "workbench.editor.highlightModifiedTabs": true,
      "workbench.settings.useSplitJSON": true,
      "workbench.sideBar.location": "right",
      "window.newWindowDimensions": "maximized",
      // Theme
        "materialTheme.accent": "Indigo",
        "workbench.colorTheme": "Material Theme Palenight",
        "workbench.iconTheme": "material-icon-theme",
        "workbench.colorCustomizations": {
          "editorWarning.foreground": "#b6c9",
        },

    // Window
      "window.restoreWindows": "folders",
      "window.menuBarVisibility": "visible",

    // Debug
      "debug.openDebug": "neverOpen",
      "debug.showInStatusBar": "never",
      "debug.internalConsoleOptions": "neverOpen",

    // etc..
      "telemetry.enableTelemetry": false,
      "breadcrumbs.enabled": true,
      "explorer.sortOrder": "type",


  /* Language Specific */
    // (?:Java|Type)Script
      "javascript.autoClosingTags": false,
      "javascript.preferences.quoteStyle": "double",
      "javascript.updateImportsOnFileMove.enabled": "always",
      "javascript.suggest.completeJSDocs": false,
      "javascript.implicitProjectConfig.checkJs": true,
    // Java
      "java.autobuild.enabled": false,
      "java.import.maven.enabled": false,
      "java.progressReports.enabled": false,
      "java.errors.incompleteClasspath.severity": "ignore",
      "java.configuration.updateBuildConfiguration": "disabled",
      "java.format.settings.profile": "GoogleStyle",
      "java.completion.guessMethodArguments": true,
      "java.format.onType.enabled": false,
      "java.configuration.checkProjectSettingsExclusions": false,
    // Kotlin
      "[kotlin]": {},
    // Crystal
      "crystal-lang.bashOnWindows": true,
    // D
      "d.enableAutoComplete": false,
      "d.enableFormatting": false,
      "dfmt.spaceAfterCast": false,
    // C#
      "csharp.format.enable": false,
      "csharpfixformat.sort.usings.splitGroups": true,
      "csharpfixformat.style.newline.atEnd": true,
      "csharpfixformat.style.spaces.beforeParenthesis": false,
    // C(?:++)?
      "C_Cpp.clang_format_fallbackStyle": "LLVM",

  /* Extensions */
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,

    // Atom Keymap
      "atomKeymap.promptV3Features": true,

    // git
      "git.defaultCloneDirectory": "/Users/Alf/Desktop",
      "git.enableSmartCommit": true,
      "git.confirmSync": false,
      "git.autofetch": true,
      "git.path": "/Users/Alf/Desktop/ambient/nt/bin/git.exe",
      "git.ignoreMissingGitWarning": true,

    // Shellcheck
      "shellcheck.useWSL": true,
      "shellcheck.disableVersionCheck": true,

    // Spellcheck
      "cSpell.showStatus": false,
      "cSpell.spellCheckDelayMs": 999,

    // Liveshare
      "liveshare.showInStatusBar": "never",
      "sync.gist": "0a038f3900f101ea5a7d9e3a8cefa539",
      "window.zoomLevel": 0,
      "editor.suggestSelection": "first",
      "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
      "showWeeklyRanking": false,
      "showMusicMetrics": false,
      "showGitMetrics": false,
}
